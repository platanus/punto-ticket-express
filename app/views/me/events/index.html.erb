<% if notice %>
  <div id="notice" class="alert alert-success"><%= notice %></div>
<% end %>

<div class="page-header">
  <h1>Tus Eventos</h1>
</div>

<table class="table table-striped">
  <tr>
    <th><%=t 'activerecord.attributes.event.name' %></th>
    <th><%=t 'activerecord.attributes.event.address' %></th>
    <th><%=t 'activerecord.attributes.event.description' %></th>
    <th><%=t 'activerecord.attributes.event.start_time' %></th>
    <th><%=t 'activerecord.attributes.event.is_published' %></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.address %></td>
    <td><%= event.description %></td>
    <td><%= l event.start_time, format: :short %></td>
    <td><%= boolean_to_words(event.is_published) %></td>
    <td><%= link_to 'Ver', [:me, event], :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Editar', edit_me_event_path(event), :class => 'btn btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Event %>
  <%= link_to 'Crear Evento', new_me_event_path, :class => 'btn btn-success' %>
<% end %>
