 <table style="width: 600px; background-color: #F5F5F5;">
  <tbody>
    <tr>
      <td colspan="2">
        <h1>
          <%= t(".title") %>
        </h1>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= t(".body", promotion: @promotion.name) %>
      </td>
    </tr>
    <tr style="background-color: #FFF; font-weight: bold;">
      <td>
        <%= t(".xls_row_column") %>
      </td>
      <td>
        <%= t(".code_error_column") %>
      </td>
    </tr>
    <% @errors.each do |error| %>
      <tr style="background-color: #FFF">
        <td>
          <%= error[:row].to_s %>
        </td>
        <td>
          <% error[:errors].keys.each do |attribute| %>
            <%= error[:errors][attribute.to_sym].join(", ") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
