.page-header
  %h1= t(".title")

.row
  .span3
    = render 'events/sidebar'
  .span9
    .well
      .row
        .span8
          %legend= t(".promo_title", event_name: @event.name)
          = form_for(@promotion, :html => {:class => 'form-horizontal'}) do |f|
            - control_group(f, :name, f.text_field(:name))
            - control_group(f, :activation_code, f.text_field(:activation_code))
            - control_group(f, :limit, f.number_field(:limit, :min => 0))
            - control_group(f, :start_date, f.text_field(:start_date))
            - control_group(f, :end_date, f.text_field(:end_date))
            .form-actions
              = f.submit t('buttons.save'), :class => 'btn btn-success btn-primary btn-large'
              = link_to t('buttons.back'), promotions_path(id: @event.id), :class => 'btn btn-success btn-primary btn-large'
