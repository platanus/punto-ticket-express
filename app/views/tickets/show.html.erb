<div class="page-header">
  <h2><%= t(".title") %></h2>
</div>
<div class="row">
  <div class="span3">
    <%= render 'configuration/sidebar' %>
  </div>
  <div class="span9">
    <div class="row ticket">
      <div class="span9 ticket-wrapper">
        <div class="row">
          <div class="span9 hrule title">
            <h2><%= @ticket.event_name %></h2>
          </div>
        </div>
        <div class="row">
          <div class="span5">
            <%= printable_ticket_label(Event.human_attribute_name(:start_time), l(@ticket.event_start_time, format: :long)) %>
          </div>
          <div class="span4">
            <%= printable_ticket_label(Event.human_attribute_name(:address), @ticket.event_address) %>
          </div>
        </div>
        <div class="row">
          <div class="span9 hrule">
            <%= printable_ticket_label(Event.human_attribute_name(:end_time), l(@ticket.event_end_time, format: :long)) %>
          </div>
        </div>
        <div class="row">
          <div class="span9 hrule">
            <%= printable_ticket_label(Ticket.human_attribute_name(:user_id), @ticket.transaction_user_email) %>
          </div>
        </div>
        <div class="row">
          <div class="span9">
            <%= ticket_type_label @ticket %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= link_to t("buttons.back"), puntopagos_transaction_path(@ticket.transaction), :class => 'btn' %>
      <%= link_to t("buttons.download"), download_tickets_path(ticket_id: @ticket.id, format: :pdf), :class => 'btn' %>
    </div>
  </div>
</div>
