.page-header.span7
  %h2= t(".title")
.row
  .span7
    = form_for(resource, :html => {:class => 'well'}, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %fieldset.form-horizontal
        - control_group f, :email, f.text_field(:email)
        - control_group f, :name, f.text_field(:name)
        - control_group f, :password, f.password_field(:password, :autocomplete => 'off')
        - control_group f, :password_confirmation, f.password_field(:password_confirmation, :autocomplete => 'off')
        .form-actions
          = f.submit t("buttons.create"), :class => 'btn btn-success'
          = link_to t(".have_account_already"), new_user_session_path
