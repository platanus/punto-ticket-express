<div class="page-header span7">
  <h2>¿Olvidó su contraseña?</h2>
</div>
<div class="row">
  <div class="span7">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'well form-password-new' }) do |f| %>
      <fieldset class="form-horizontal">
      	<%= control_group f, :email, f.text_field(:email) %>
        <div class="form-actions">
          <%= f.submit 'Restablecer contraseña', :class => 'btn btn-success' %>
          <div class="links-container">
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
