.page-header
  %h1= t(".title")

#page_account.row
  .span3
    = render 'sidebar'
  .span9
    %table{class: "table table-striped"}
      %tr
        %th= Producer.human_attribute_name :name
        %th= Producer.human_attribute_name :contact_name
        %th= Producer.human_attribute_name :phone
        %th{colspan: 3}

      - @producers.each do |producer|
        %tr
          %td= producer.name
          %td= producer.contact_name
          %td= producer.phone
          %td= link_to t('buttons.show'), producer_path(producer)
          %td= link_to t('buttons.edit'), edit_producer_path(producer)
          %td= link_to t('buttons.destroy'), producer_path(producer), method: :delete
