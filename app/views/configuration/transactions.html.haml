.page-header
  %h1= t(".title")

#page_account.row
  .span3
    = render 'sidebar'
  .span9
    %table{class: "table table-striped"}
      %tr
        %th= Transaction.human_attribute_name :transaction_time
        %th= Transaction.human_attribute_name :event
        %th= Transaction.human_attribute_name :tickets_count
        %th= Transaction.human_attribute_name :amount
        %th

      - @transactions.each do |transaction|
        %tr
          %td= l(transaction.transaction_time, format: :short)
          %td= transaction.event_name
          %td= transaction.tickets_quantity
          %td= number_to_currency(transaction.total_amount)
          %td= link_to t('buttons.show'), puntopagos_transaction_path(transaction)