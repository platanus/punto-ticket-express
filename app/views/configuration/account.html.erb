<div class="page-header">
  <h1>
    <%= t(".title") %>
  </h1>
</div>
<div class="row" id="page_account">
  <div class="span3">
    <%= render 'sidebar' %>
  </div>
  <div class="span9">
    <%= form_for(@user, :url => configuration_update_account_path, :html => { :method => :put, :class => 'well form-horizontal' }) do |f| %>
      <%= control_group f, :email, f.text_field(:email, :class => 'span4') %>
      <%= control_group f, :name, f.text_field(:name, :class => 'span4') %>
      <%= control_group f, :password, f.password_field(:password, :autocomplete => 'off', :class => 'span4'), {ignore_required: true} %>
      <%= control_group f, :password_confirmation, f.password_field(:password_confirmation, :autocomplete => 'off', :class => 'span4') %>
      <div class="form-actions control-group text-center">
        <%= f.submit t('buttons.save'), :class => 'btn btn btn-large' %>
      </div>
    <% end %>
  </div>
</div>
