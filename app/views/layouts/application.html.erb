<!DOCTYPE html>
<html ng-app="puntoTicketApp">
<head>
  <title>PuntoTicketExpress</title>
  <title><%= content_for?(:title) ? yield(:title) : "PuntoTicketExpress" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Description" %>">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Punto Ticket", root_path, :class => 'brand' %>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Nuestros servicios", features_path %></li>
            <li><%= link_to "¿Como funciona?", how_works_path %></li>
            <li><%= link_to "Crear evento", new_event_path %></li>
          </ul>
          <ul class="nav pull-right" id="main-menu-right">
            <% if user_signed_in? %>

              <!-- dropdown menu links -->
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  <%= current_user.email %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </div>
              <!-- end dropdown menu links -->

            <% else %>

              <li><%= link_to "Iniciar Sesión", new_user_session_path %></li>
              <li><%= link_to "Crear Cuenta", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <%= yield(:home_section) %>
  <div class="container"> <%= yield %> </div>

  <footer class="footer well navbar-fixed-bottom">
      <div class="container">
        <p>Diseñado y construido por <a href="platan.us" target="_blank">Platanus SpA</a>, 2013 </p>
      </div>
  </footer>

</body>
</html>
