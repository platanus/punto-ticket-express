!!!
%html{"ng-app" => "puntoTicketApp"}
  %head
    %title PuntoTicketExpress
    %title= content_for?(:title) ? yield(:title) : "PuntoTicketExpress"
    %meta{:content => content_for?(:description) ? yield(:description) : "Description", :name => "description"}/
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to image_tag("punto-ticket-logo.png", :border => 0), root_path, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li= link_to "Nuestros servicios", features_path
              %li= link_to "¿Como funciona?", how_works_path
              %li= link_to "Crear evento", new_event_path
              %li= nav_link 'Mis eventos', events_path if user_signed_in?

            %ul#main-menu-right.nav.pull-right
              - if user_signed_in?
                / dropdown menu links
                .dropdown
                  %a.btn.dropdown-toggle{:href => "#"}
                    = current_user.email
                    %span.caret
                  %ul.dropdown-menu
                    %li= link_to "Mi perfil", destroy_user_session_path, :method => :delete
                    %li= link_to "Salir", destroy_user_session_path, :method => :delete
                / end dropdown menu links
              - else
                %li= link_to "Iniciar Sesión", new_user_session_path
                %li
                  %span.devider
                %li= link_to "Crear Cuenta", new_user_registration_path
    = yield(:home_section)
    .container
      = yield
    %footer
      .container
        %p
          Diseñado y construido por
          = succeed "," do
            %a{:href => "platan.us", :target => "_blank"} Platanus SpA
          2013
