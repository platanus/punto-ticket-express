.panel.activation-code-panel
  .panel-heading.panel-title
    %i.icon-ticket
    = t(".title")
  .input-append
    = text_field_tag(:activation_code, nil, :class => 'span5 code-input', :placeholder => 'Ingrese su código aquí...')
    = submit_tag(t('buttons.use'), :class => 'btn span2 btn-success code-btn')