<div class="panel activation-code-panel">
  <div class="panel-heading panel-title">
    <i class="icon-barcode"></i>
    <%= t(".title") %>
  </div>
  <div class="input-append">
    <%= text_field_tag(:activation_code, nil, :class => 'span6 code-input', :placeholder => 'Ingrese su código aquí...', 'ng-model' => 'code.entered') %>
    <%= submit_tag(t('buttons.use'), :class => 'btn span2 btn-success code-btn', 'ng-click' => 'usePromoCode($event)') %>
  </div>
</div>
