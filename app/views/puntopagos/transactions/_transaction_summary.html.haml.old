.panel.panel-primary
  .panel-heading.panel-title
    %i.icon-ticket
    = t(".title")
  .transaction-summary
    - @ticket_types.each do |type|
      .ticket-type-row
        .name.span7
          = type.bought_quantity.to_s + " x " + type.name
        .total.span4
          = number_to_currency(type.bought_quantity_price)
      - type.available_promotions.each do |promo|
        .promo-row
          .name.span6.offset1
            = promo.name
          .total.span4
            = number_to_currency(promo.discount * -1)

