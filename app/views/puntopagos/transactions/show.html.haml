.page-header
  %h2= t(".title", time: l(@transaction.transaction_time, format: :long))

#page_account.row
  .span3
    = render 'configuration/sidebar'
  .span9
    %table{class: "table table-striped"}
      %tr
        %th
        %th= Ticket.human_attribute_name :ticket_type
        %th{colspan: 2}
        - @transaction.tickets.each_with_index do |ticket, index|
          %tr
            %td= (index += 1)
            %td= ticket.ticket_type_name
            %td= link_to t('buttons.show'), ticket_path(ticket)
            %td= link_to t('buttons.download'), download_tickets_path(ticket_id: ticket.id, format: :pdf)

    .form-actions
      = link_to t("buttons.back"), configuration_transactions_path, :class => 'btn'
      = link_to t("buttons.download"), download_tickets_path(ticket_ids: @transaction.ticket_ids, format: :pdf), :class => 'btn'