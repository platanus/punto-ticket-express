.page-header
  %h1= @title

#page_account.row
  .span3
    = render 'configuration/sidebar'
  .span9
    = form_for(@producer, :html => {:class => 'well form-horizontal' }) do |f|
      - control_group f, :name, f.text_field(:name)
      - control_group f, :corporate_name, f.text_field(:corporate_name)
      - control_group f, :rut, f.text_field(:rut)
      - control_group f, :address, f.text_field(:address)
      - control_group f, :phone, f.text_field(:phone)
      - control_group f, :contact_name, f.text_field(:contact_name)
      - control_group f, :contact_email, f.text_field(:contact_email)
      - control_group f, :brief, f.text_area(:brief, rows: 3)
      - control_group f, :description, f.text_area(:description, rows: 6)
      - control_group f, :website, f.text_field(:website)
      .form-actions
        = f.submit t("buttons.save"), :class => 'btn'
        = link_to t("buttons.back"), configuration_producers_path, :class => 'btn'
