<div class="page-header">
  <h1>Listing events</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Description</th>
    <th>Organizer name</th>
    <th>Organizer description</th>
    <th>Custom url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.address %></td>
    <td><%= event.description %></td>
    <td><%= event.organizer_name %></td>
    <td><%= event.organizer_description %></td>
    <td><%= event.custom_url %></td>
    <td><%= link_to 'Show', event, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path, :class => 'btn btn-success' %>
