<%= form_for @event, html: {name: 'form', class: 'well', novalidate: true} do |f| %>
  <fieldset class="form-horizontal">
    <legend>Detalles del Evento</legend>
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-error">
        <h4 class="alert-heading"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <br />
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name,
          :class => 'input-xlarge',
          'ng-model' => 'events.name',
          'validate-type' => 'requireds',
          'form-validate' => '',
          'required' => ''
        %>
        <!-- custom validation -->
        <div ng-show="form['event[name]'].$error.requireds" class="input-help">
          <h4>Debe rellenar el nombre</h4>
        </div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address,
          :class => 'input-xlarge',
          'ng-model' => 'events.name',
          'validate-type' => 'requireds',
          'form-validate' => '',
          'required' => ''
        %>
        <!-- custom validation -->
        <div ng-show="form['event[address]'].$error.requireds" class="input-help">
          <h4>Debe rellenar la dirección</h4>
        </div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :organizer_name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :organizer_description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :custom_url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :custom_url, :class => 'input-xlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label 'Fecha y Horario', :class => 'control-label' %>
      <div class="controls">
        <div class="control-group input-append">
          <input name="start_date" class="input-small" type="text" ng-model="datepicker.startDate" data-date-format="dd/mm/yyyy" bs-datepicker required>
          <!-- you must define a filter to accept more than one validation -->
          <div ng-show="form.start_date.$error.date" class="input-help">
            <h4>El formato de fecha no es valido</h4>
          </div>
          <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
        </div>
        <div class="control-group input-append">
          <input name="start_time" class="input-mini" type="text" ng-model="timepicker.startTime" bs-timepicker>
          <button type="button" class="btn" data-toggle="timepicker"><i class="icon-time"></i></button>
        </div>
        -
        <div class="control-group input-append">
          <input name="end_date" class="input-small" type="text" ng-model="datepicker.endDate" data-date-format="dd/mm/yyyy" bs-datepicker>
          <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
        </div>
        <div class="control-group input-append">
          <input name="end_time" class="input-mini" type="text" ng-model="timepicker.endTime" bs-timepicker>
          <button type="button" class="btn" data-toggle="timepicker"><i class="icon-time"></i></button>
        </div>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Crea los Tickets</legend>

    <form-validate name="events" ng-model="tickets" validate-type="minRepeat" required>
    <div ng-show="form.events.$error.minRepeat" class="alert alert-error">
      <h4>Debe crear al menos un tipo de ticket para publicar este evento.</h4>
    </div>

    <div class="control-group text-center">
      <button ng-click="addTicket()" type="button" class="btn btn-success">Agrega un ticket</button>
    </div>
    <br />
    <table class="table table-bordered" ng-show="tickets.length" ng-animate="{show: 'event-show', hide: 'event-hide'}">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th></th>
        </th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="ticket in tickets">
          <td><input class="input-xlarge" type="text" ng-model="ticket.name" name="event[ticket_types_attributes][{{$index}}][name]" required></td>
          <td><input class="input-small" type="text" ng-model="ticket.price" name="event[ticket_types_attributes][{{$index}}][price]" required></td>
          <td><input class="input-small" type="text" ng-model="ticket.qty" name="event[ticket_types_attributes][{{$index}}][quantity]" required></td>
          <td><a class="close" ng-click="deleteTicket($index)">×</a></td>
        </tr>
      </tbody>
    </table>
  </fieldset>

  <div class="form-actions">
    <%= f.submit 'Publicar evento', :name => 'publish', :class => 'btn btn-success btn-primary btn-large'  %>
    <input class="btn btn-large" name="commit" type="submit" value="Guardar evento" ng-show="form.$valid">
    <input value="Guardar evento" type="button" class="btn btn-large" ng-click="allowValidation()" ng-show="form.$invalid">
  </div>

<% end %>
