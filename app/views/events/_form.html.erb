<%= form_for @event, html: {class: "well"} do |f| %>
  <fieldset class="form-horizontal">
    <legend>Event details</legend>
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-error">
        <h4 class="alert-heading"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <br />
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :organizer_name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :organizer_description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :custom_url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :custom_url, :class => 'input-xlarge' %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Create tickets</legend>
    <div class="control-group text-center">
      <button ng-click="addTicket()" type="button" class="btn btn-success">Add ticket</button>
    </div>
    <br />
    <table class="table table-bordered" ng-show="tickets.length" ng-animate="{show: 'event-show', hide: 'event-hide'}">
      <thead>
        <tr>
          <th >Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th></th>
        </th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="ticket in tickets">
          <td><input class="input-xlarge" type="text" ng-model="ticket.name" name="event[ticket_types_attributes][{{ticket.id}}][name]"></td>
          <td><input class="input-small" type="text" ng-model="ticket.price" name="event[ticket_types_attributes][{{ticket.id}}][price]"></td>
          <td><input class="input-small" type="text" ng-model="ticket.quantity" value="{{ticket.quantity}}"></td>
          <td><a class="close" ng-click="deleteTicket(ticket)">Ã—</a></td>
        </tr>
      </tbody>
    </table>
  </fieldset>

  <div class="form-actions">
    <%= f.submit 'Create event', :class => 'btn btn-success'  %>
  </div>

<% end %>
