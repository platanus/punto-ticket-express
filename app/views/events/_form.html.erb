<%= form_for @event, html: {class: "well"} do |f| %>
  <fieldset class="form-horizontal">
    <legend>Detalles del Evento</legend>
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-error">
        <h4 class="alert-heading"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <br />
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :organizer_name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :organizer_description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :organizer_description, :rows => '3', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :custom_url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :custom_url, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label 'Fecha y Horario', :class => 'control-label' %>
      <div class="controls">
        <div class="control-group input-append">
          <input name="start_date" class="input-small" type="text" ng-model="datepicker.startDate" data-date-format="dd/mm/yyyy" bs-datepicker>
          <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
        </div>
        <div class="control-group input-append">
          <input name="start_time" class="input-mini" type="text" ng-model="timepicker.startTime" bs-timepicker>
          <button type="button" class="btn" data-toggle="timepicker"><i class="icon-time"></i></button>
        </div>
        -
        <div class="control-group input-append">
          <input name="end_date" class="input-small" type="text" ng-model="datepicker.endDate" data-date-format="dd/mm/yyyy" bs-datepicker>
          <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
        </div>
        <div class="control-group input-append">
          <input name="end_time" class="input-mini" type="text" ng-model="timepicker.endTime" bs-timepicker>
          <button type="button" class="btn" data-toggle="timepicker"><i class="icon-time"></i></button>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Crea los Tickets</legend>
    <div class="control-group text-center">
      <button ng-click="addTicket()" type="button" class="btn btn-success">Agrega un ticket</button>
    </div>
    <br />
    <table class="table table-bordered" ng-show="tickets.length" ng-animate="{show: 'event-show', hide: 'event-hide'}">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th></th>
        </th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="ticket in tickets">
          <td><input class="input-xlarge" type="text" ng-model="ticket.name" name="event[ticket_types_attributes][{{$index}}][name]"></td>
          <td><input class="input-small" type="text" ng-model="ticket.price" name="event[ticket_types_attributes][{{$index}}][price]"></td>
          <td><input class="input-small" type="text" ng-model="ticket.qty" name="event[ticket_types_attributes][{{$index}}][quantity]"></td>
          <td><a class="close" ng-click="deleteTicket($index)">Ã—</a></td>
        </tr>
      </tbody>
    </table>
  </fieldset>

  <div class="form-actions">
    <%= f.submit 'Publicar', :class => 'btn btn-success'  %>
  </div>

<% end %>
