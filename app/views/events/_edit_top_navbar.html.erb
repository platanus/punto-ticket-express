    <div class="navbar-inner">
      <div class="container">
        <div class="page-header">
          <div class="row-fluid">
            <div class="span6">
              <h1>
                <%= t(".title") %>
              </h1>
            </div>
            <div class="span6">
              <%= link_to_id "Publicar evento", "publish-btn", "btn btn-primary btn-success bold pull-right" %>
