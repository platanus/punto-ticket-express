.page-header
  %h1= t(".title")

.row
  .span3
    = render 'sidebar'
  .span9
    %table{class: "table table-striped"}
      %tr
        %th= User.human_attribute_name :name
        %th= User.human_attribute_name :email
        %th
        - @transactions.each do |transaction|
          %tr
            %td= transaction.user_name
            %td= transaction.user_email
            %td= link_to t('buttons.show_extra_data'), puntopagos_transaction_nested_resource_path(transaction) if transaction.nested_resource
