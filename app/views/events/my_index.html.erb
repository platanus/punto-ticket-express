<div class="page-header">
  <h1><%= t(".title") %></h1>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-striped">
      <thead>
      	<tr>
      		<th><%= Event.human_attribute_name :name %></th>
      		<th><%= Event.human_attribute_name :address %></th>
      		<th><%= Event.human_attribute_name :start_time %></th>
      		<th><%= Event.human_attribute_name :is_published %></th>
      		<th></th>
      		<th></th>
      	</tr>
      </thead>
      <tbody>
      	<% @events.each do |event| %>
      		<tr>
      			<td><%= event.name %></td>
      			<td><%= event.address %></td>
      			<td><%= l(event.start_time, format: :short) if event.start_time %></td>
      			<td class="center"><%= human_boolean(event.is_published) %></td>
      			<td><%= show_or_preview_button(event) %></td>
      			<td><%= statistics_or_edit_button(event) %></td>
      		</tr>
      	<% end %>
      </tbody>
    </table>
    <div class="form-actions">
      <%= link_to t("buttons.new"), new_event_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>
